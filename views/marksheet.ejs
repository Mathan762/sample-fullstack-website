<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Marksheet</title>
    <link rel="stylesheet" href="./public/css/marksheet.css">
</head>
<body>
    <div class="table">
        <table>
            <caption>Student Marksheet</caption>

            <tr>
                <th>Name</th>
                <th>Register Number</th>
                <th>Subject 1</th>
                <th>Subject 2</th>
                <th>Subject 3</th>
                <th>Subject 4</th>
                <th>Subject 5</th>
                <th>Total</th>
            </tr>

            <% if(data.length != 0) { %>
            <% data.forEach((row) => { %>

            <tr>
                    <td><%= row.name %></td>
                    <td><%= row.reg_no %></td>
                    <td><%= row.sub1 %></td>
                    <td><%= row.sub2 %></td>
                    <td><%= row.sub3 %></td>
                    <td><%= row.sub4 %></td>
                    <td><%= row.sub5 %></td>
                    <td><%= (row.sub1 + row.sub2 + row.sub3 + row.sub4 + row.sub5) %></td>
            </tr>
            <% }); %>

            <% } else {%>
                <tr>
                    <td colspan="8">Sorry, No data Found</td>
                </tr>
            <% } %>

        </table>
    </div>
</body>
</html>